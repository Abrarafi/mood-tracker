{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "backend/models/Activity.js", "backend/models/chat.js", "backend/models/ChatSession.js", "backend/models/Mood.js", "backend/models/Session.js", "backend/models/user.model.js", "backend/config/logger.js", "backend/inngest/aiFunctions.js", "backend/inngest/client.js", "backend/inngest/functions.js"],
  "exclude": ["node_modules"]
}
